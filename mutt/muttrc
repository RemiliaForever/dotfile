set editor      =   "/usr/bin/vim"
set charset     =   "utf-8"

# maildir
set mbox_type   =   Maildir
set folder      =   $HOME/.mail
set spoolfile   =   +inbox
set postponed   =   +draft
set trash       =   +trash
set header_cache=   $HOME/.cache/mutt/headers
set message_cachedir=$HOME/.cache/mutt/bodies
# gui
ignore *
unignore from date subject to cc
unignore organization organisation x-mailer: x-newsreader: x-mailing-list:
unignore posted-to:
hdr_order From Date: From: To: Cc: Subject:
set sort        =   threads
set sort_aux    =   date
set date_format =   "%Y,%b %d,%a│%H:%M:%S"
set index_format=   "%3C│%Z│%D│%-30.30L│%?l?%4l&%4c?│%s"
set status_format = "[%f] %r [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]   (%s/%S) %> [%m=aur-general](%P) "

set fast_reply  =   yes
set resolve     =   yes

set pager_index_lines=5
set pager_stop  =   yes
# bind
source $HOME/.mutt/bindings
# hook

bind pager h display-toggle-weed
set delete      =   yes
# color
source $HOME/.mutt/colors
# personal
set realname    =   "RemiliaForever"
set use_from    =   yes
set envelope_from = yes
set from        =   "remilia@koumakan.cc"
set crypt_use_gpgme = yes
set signature   =   $HOME/.mutt/signature

source "gpg -dq $HOME/.mutt/passwd |"
# pop3s
set pop_host    =   "pops://$my_name:$my_passwd@koumakan.cc:8196"
set pop_delete  =   yes
# smtps
set record      =   +sent
set smtp_url    =   "smtps://$my_name:$my_passwd@koumakan.cc"
set ssl_force_tls = yes

# address
set alias_file  =   $HOME/.mutt/aliases
set sort_alias  =   alias
source  $alias_file
# mailcap
set mailcap_path =  $HOME/.mutt/mailcap
auto_view text/html
alternative_order text/plain text/enriched text/plain
