# vim: filetype=muttrc
bind pager h display-toggle-weed

bind index G imap-fetch-mail
bind pager G imap-fetch-mail

bind pager j next-line
bind pager k previous-line

macro attach B "<pipe-message>cat > /tmp/mutt.html;xdg-open /tmp/mutt.html<enter>"

# multi account
#folder-hook 'remilia@koumakan.cc' 'source ~/.mutt/remilia@koumakan.cc/remilia'
#folder-hook '' 'source ~/.mutt/chz@koumakan.cc/chz'
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/remilia@koumakan.cc/remilia<enter><change-folder>!<enter>'
